---
// Define props for the card component
export interface Props {
        first: string;
        last: string;
        genre: string;
        email: string;
        picture: string;
        location: string;
        phone: string;
        nat: string;
}

const { first, last, genre, email, picture, location, phone, nat } = Astro.props;
---

<article class="rounded-lg border border-gray-100 bg-white p-5 shadow-sm transition hover:shadow">
        <div class="flex items-center gap-4">
                <img
                        src={picture}
                        alt={`${first} ${last}`}
                        class="h-14 w-14 rounded-full object-cover"
                />
                <div>
                        <h2 class="text-lg font-medium text-gray-800">{first} {last}</h2>
                        <p class="text-sm text-gray-500">{email}</p>
                </div>
        </div>

        <dl class="mt-4 space-y-2 text-sm text-gray-600">
                <div class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M12 21s7-5.33 7-11a7 7 0 1 0-14 0c0 5.67 7 11 7 11Z" />
                        </svg>
                        <span>{location}</span>
                </div>

                <div class="flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M22 16.92v3a2 2 0 0 1-2.18 2 19.8 19.8 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.8 19.8 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72c.12.9.32 1.78.59 2.63a2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.45-1.15a2 2 0 0 1 2.11-.45c.85.27 1.73.47 2.63.59A2 2 0 0 1 22 16.92Z" />
                        </svg>
                        <span>{phone}</span>
                </div>
        </dl>

        <div class="mt-4 flex items-center justify-between">
                <span class="text-xs font-medium text-gray-500">{nat}</span>
                <button class="text-xs font-medium text-gray-600 hover:text-gray-800">
                        View profile
                </button>
        </div>
</article>
